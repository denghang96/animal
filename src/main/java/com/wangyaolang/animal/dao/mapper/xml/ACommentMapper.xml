<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangyaolang.animal.dao.mapper.ACommentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wangyaolang.animal.dao.entity.AComment">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="comment" property="comment" />
        <result column="amimal_id" property="amimalId" />
    </resultMap>

    <resultMap id="CommentInfoResultMap" type="com.wangyaolang.animal.controller.comment.vo.CommentInfoVo">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="comment" property="comment" />
        <result column="amimal_id" property="amimalId" />
    </resultMap>

    <!--根据条件查询列表-->
    <select id="getList" resultMap="CommentInfoResultMap">
        select id, user_id, comment, amimal_id
        from a_comment
        where 1 = 1
        <if test="queryListVo.userId != null and queryListVo.userId != ''">
            AND user_id = #{queryListVo.userId}
        </if>
        <if test="queryListVo.amimalId != null and queryListVo.amimalId != ''">
            AND amimal_id = #{queryListVo.amimalId}
        </if>
        order by a_comment.id desc
    </select>
</mapper>
